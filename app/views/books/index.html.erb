<% if params[:cat] %>
  <h3>Books listing for category <%= params[:cat] %>:</h3>
<% else %>
  <h3>Books listing here:</h3>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Category</th>
      <th>Cover</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="col-md-4"><%= book.title %></td>
        <td class="col-md-2"><%= book.author %></td>
        <td class="col-md-2"><%= book.category.name %></td>
        <td class="col-md-2"><%= image_tag book.cover.thumb, 
          class: "img-thumbnail" %></td>
        <td class="col-md-2"><%= link_to 'Show', book, 
          class: "btn btn-default btn-xs" %>
        <%= link_to 'Edit', edit_book_path(book), 
          class: "btn btn-default btn-xs" %>
        <%= link_to 'Destroy', book, 
        method: :delete, data: { confirm: 'Are you sure?' },
          class: "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
